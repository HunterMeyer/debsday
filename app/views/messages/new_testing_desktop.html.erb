<!-- This page is for testing recording the webcam from the browser -->

<h1>Welcome</h1>
<h4>Say Happy 60th to Deb Murphy</h4>

<div>
  <%= form_for @message, html: { multipart: true } do |f| %>
    <div>
      <%= f.label :name, 'From:' %>
      <%= f.text_field :name, placeholder: 'Your Name', autofocus: true %>
    </div>
    <div style='margin-top: 10px;'>
      <%= f.label :photo, 'Upload a Photo of You and Deb' %><br>
      <%= f.file_field :photo %>
    </div>
    <div style='margin-top: 10px;'>
      <%= f.label :video_path, 'Record a Happy Birthday Video' %><br>
      <%= f.hidden_field :video_path, value: '' %>
    </div>


    <div style='margin-top: 10px;'>
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>

    <div>
            <label for="time-interval">Time Interval (milliseconds):</label>
            <input type="text" id="time-interval" value="5000">

            <label for="video-width">Video Width:</label>
            <input type="text" id="video-width" value="320">

            <label for="video-height">Video Height:</label>
            <input type="text" id="video-height" value="240">

            <button id="start-recording">Start Recording</button>
            <button id="stop-recording" disabled>Stop Recording</button>
        </div>
        <div id="videos-container">


          <script
            src="https://cdn.webrtc-experiment.com/MediaStreamRecorder-v1.2.js"
            data-require="WhammyRecorder,MediaRecorder"
            data-scripts-dir="https://cdn.webrtc-experiment.com/msr/">
        </script>