<h1>Welcome</h1>
<h4>Say Happy 60th to Deb Murphy</h4>

<div>
  <%= form_for @message, html: { multipart: true } do |f| %>
    <div>
      <%= f.label :name, 'From:' %>
      <%= f.text_field :name, placeholder: 'Your Name', autofocus: true %>
    </div>
    <div style='margin-top: 10px;'>
      <%= f.label :photo, 'Upload a Photo of You and Deb' %><br>
      <%= f.file_field :photo %>
    </div>
    <div style='margin-top: 10px;'>
      <%= f.label :video, 'Record a Happy Birthday Video' %><br>
      <%= f.file_field :video, accept: 'video/*', capture: '' %>
    </div>
    <div style='margin-top: 10px;'>
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>
